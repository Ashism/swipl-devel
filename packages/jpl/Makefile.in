################################################################
#
################################################################

.SUFFIXES: .tex .dvi .doc .pl

PL=@PL@
PLBASE=@PLBASE@
PLARCH=@PLARCH@
PLINCL=@PLINCL@
PKGDOC=$(PLBASE)/doc/packages
PCEHOME=../xpce

CC=@CC@
COFLAGS=@COFLAGS@
CWFLAGS=@CWFLAGS@
CMFLAGS=@CMFLAGS@
CIFLAGS=@CIFLAGS@
CFLAGS=$(COFLAGS) $(CWFLAGS) $(CMFLAGS) $(CIFLAGS) @DEFS@
LIBS=@LIBS@
NETLIBS=@NETLIBS@

JAVA_HOME=@JAVA_HOME@
JAVAC=@JAVAC@

DOCTOTEX=$(PCEHOME)/bin/doc2tex
PLTOTEX=$(PCEHOME)/bin/pl2tex
DOC=clib
TEX=$(DOC).tex
DVI=$(DOC).dvi
PDF=$(DOC).pdf
RUNTEX=../../man/runtex

LD=@LD@
LDFLAGS=@LDSOFLAGS@

INSTALL=@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
INSTALL_DATA=@INSTALL_DATA@

LIBPL=		jpl.pl
TARGETS=	libjpl.@SO@
OBJ=		src/c/jpl.o

all:		$(TARGETS)
		(cd src/java && $(MAKE) all)

libjpl.@SO@:	$(OBJ)
		$(LD) $(LDFLAGS) -o $@ $(OBJ) -ljava -lverify -ljvm

################################################################
# Verify the package
################################################################

check::		TestJPL.class
		$(PL) -q -f check.pl -g test,halt -t 'halt(1)'

TestJPL.class:	TestJPL.java
		$(JAVAC) -classpath jpl.jar TestJPL.java

################################################################
# Installation
################################################################

DOCDIRS=	. ./java_api ./java_api/javadoc ./java_api/javadoc/jpl \
		./java_api/javadoc/jpl/class-use \
		./java_api/javadoc/jpl/fli \
		./java_api/javadoc/jpl/fli/class-use \
		./java_api/javadoc/resources \
		./prolog_api \
		./prolog_api/overview
DOCFILES=	$(shell cd ./docs && find . -name '*.html' -o -name '*.gif' -o -name '*.jpg')


install:	$(TARGETS) $(LIBPL)
		mkdir -p $(PLBASE)/lib/$(PLARCH)
		for f in $(TARGETS); do \
		  $(INSTALL_PROGRAM) $$f $(PLBASE)/lib/$(PLARCH); \
		done
		mkdir -p $(PLBASE)/library
		for f in $(LIBPL); do \
		  $(INSTALL_DATA) -m 644 $$f $(PLBASE)/library; \
		done
		$(INSTALL_DATA) jpl.jar $(PLBASE)/lib
		$(PL) -f none -g make -t halt

rpm-install:	install

html-install::
		mkdir -p $(PKGDOC)/jpl
		@echo -n "Creating directories "
		@for d in $(DOCDIRS); do \
		    mkdir -p $(PKGDOC)/jpl/$$d; echo -n .; \
		done
		@echo "ok"
		@echo -n "Copying documentation files "
		@for f in $(DOCFILES); do \
		    $(INSTALL_DATA) docs/$$f $(PKGDOC)/jpl/$$f; echo -n .; \
		done
		@echo "ok"

pdf-install::
		mkdir -p $(PKGDOC)
		$(INSTALL) -m 644 clib.pdf $(PKGDOC)

uninstall::
		(cd $(PLBASE)/lib/$(PLARCH) && rm -f $(TARGETS))
		(cd $(PLBASE)/library && rm -f $(LIBPL))
		$(PL) -f none -g make -t halt

################################################################
# Documentation
################################################################

pdf:		$(PDF)

$(DVI):		$(TEX)
		$(RUNTEX) $(DOC)

$(PDF):		$(TEX)
		$(RUNTEX) --pdf $(DOC)

html:		$(TEX)
		latex2html $(DOC)
		mv html/index.html clib.html
		rm -r html

$(TEX):		$(DOCTOTEX)

.doc.tex:
		$(DOCTOTEX) $*.doc > $*.tex
.pl.tex:
		$(PLTOTEX) $*.pl > $*.tex

################################################################
# Clean
################################################################

clean:
		rm -f $(OBJ) *~ *.o *% a.out core config.log
		rm -f TestJPL.class
		(cd src/java && $(MAKE) clean)

distclean:	clean
		rm -rf autom4te.cache
		rm -f $(TARGETS) config.cache config.h config.status Makefile
		rm -f clib.aux clib.log clib.out clib.toc
		rm -rf html
